@model OrderViewModel

@{
    ViewBag.PageTitle = "التحكم في الطلبات";
    ViewBag.CardTitle = "جميع الطلبات";
    Layout = "~/Views/Shared/_Dashbord.cshtml";
}

<div class="table-responsive">
    <table id="myTable" class="table table-hover text-center" width="100%">
        <thead>
            <tr class="text-center">
                <th scope="col">Id</th>
                <th scope="col">الاسم</th>
                <th scope="col">رقم الهاتف</th>
                <th scope="col">الايميل</th>
                <th scope="col">حاله الطلب</th>
                <th scope="col">العنوان</th>
                <th scope="col">السعر</th>
                <th scope="col">تاريخ الطلب</th>
                <th scope="col">الاعدادات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.orders)
            {
                <tr class="text-center">
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.Email</td>
                    <td>@item.OrderStatus</td>
                    <td>@item.Address</td>
                    <td>@item.TotalPrice</td>
                    <td>@item.OrderDate</td>
                    <td class="d-flex flex-column flex-lg-row justify-content-center">
                        <a class="btn btn-success btn-sm mb-2 mb-lg-0 me-lg-2" asp-route-orderId="@item.Id" asp-action="Details" asp-controller="Order">التفاصيل</a>
                        <form asp-action="deleteOrder" asp-controller="Order" method="post" onsubmit="return confirm('Are you sure you want to delete this order?');">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">حذف</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="~/Models/Ordes.js"></script>
}
