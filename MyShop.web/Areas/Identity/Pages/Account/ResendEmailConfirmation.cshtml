@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "إعادة إرسال البريد الإلكتروني للتأكيد";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card shadow-sm p-4">
                <h1 class="text-center mb-4">@ViewData["Title"]</h1>
                <h2 class="text-center mb-4">أدخل بريدك الإلكتروني.</h2>
                <hr />
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label">البريد الإلكتروني</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <button type="submit" class="w-100 btn btn-lg btn-primary">إعادة الإرسال</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
