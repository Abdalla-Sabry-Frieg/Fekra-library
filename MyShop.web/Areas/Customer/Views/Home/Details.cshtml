@model ShoppingCart

<form asp-action="Details" method="post" enctype="multipart/form-data">
    <section class="py-5" style="background-color: #f4ece3;">
        <div class="container px-4 px-lg-5 my-5"> 
            <div class="row gx-4 gx-lg-5 align-items-center">
                <input asp-for="@Model.ProductId" hidden />

                <!-- Product Image -->
                <div class="col-12 col-md-6 mb-4 mb-md-0">
                    <img src="~/@Model.Product.Image" class="img-fluid rounded" alt="@Model.Product.Name" />
                </div>

                <!-- Product Details -->
                <div class="col-12 col-md-6" style="color: #4a3f35;">
                    <div class="mb-2 fw-bolder text-uppercase" style="color: #8b5e34;">@Model.Product.Category.Name</div>
                    <h1 class="fw-bolder">@Model.Product.Name</h1>
                    <div class="mb-3" style="font-size: 1.5rem;">
                        <span>@Model.Product.Price.ToString("C")</span>
                    </div>
                    <p class="lead" style="color: #6d5c52;">@Model.Product.Description</p>

                    <!-- Quantity and Add to Cart Button -->
                    <div class="d-flex flex-column flex-sm-row align-items-center py-4">
                        <button class="btn btn-outline-dark flex-shrink-0" type="submit" style="background-color: #8b5e34; color: #fff;">
                            <i class="bi-cart-fill me-1"></i>
                            اضف الي العربه 
                        </button>
                        <a class="btn btn-outline-dark flex-shrink-0 mx-3" href="/Customer/Home/Index" style="background-color: #8b5e34; color: #fff;">
                            اكمل التسوق
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>
